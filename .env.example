# Django Environment Selection
# Options: development, production, testing
DJANGO_ENV=development

# Core Django Settings
DJANGO_SECRET_KEY=your-secret-key-here
DEBUG=True  # Set to False in production
ALLOWED_HOSTS=localhost,127.0.0.1,example.com
LANGUAGE_CODE=en-us
TIME_ZONE=UTC

# Static and Media Files
STATIC_URL=/static/
MEDIA_URL=/media/

# Database Settings
# SQLite (default for development)
# Leave DATABASE_URL unset to use SQLite

# PostgreSQL (recommended for production)
# DATABASE_URL=postgres://user:password@localhost:5432/dbname

# Database Connection Settings
DB_CONN_MAX_AGE=600
DB_CONN_HEALTH_CHECKS=True

# Password Validation
MIN_PASSWORD_LENGTH=8

# Email Settings
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend  # For development
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend  # For production
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False
DEFAULT_FROM_EMAIL=noreply@example.com

# AWS S3 Settings (for production static/media files)
USE_S3=False
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_STORAGE_BUCKET_NAME=your-bucket-name
AWS_S3_CUSTOM_DOMAIN=  # Leave empty to use default {bucket}.s3.amazonaws.com
AWS_S3_CACHE_MAX_AGE=86400
STATIC_LOCATION=static
MEDIA_LOCATION=media

# Redis Cache Settings
REDIS_URL=redis://localhost:6379/1
REDIS_SOCKET_TIMEOUT=5
USE_REDIS_SESSIONS=False

# Security Settings
DISABLE_SSL=True  # Set to False in production
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
X_FRAME_OPTIONS=DENY

# Logging
ROOT_LOG_LEVEL=INFO
DJANGO_LOG_LEVEL=INFO
DB_LOG_LEVEL=WARNING

# Development Tools
ENABLE_DEBUG_TOOLBAR=False

# API Keys
OPENAI_API_KEY=your-openai-api-key
HUGGINGFACE_API_KEY=your-huggingface-api-key
